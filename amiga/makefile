include ../Makefile.amiga.common

# Uncomment the next line if you are cross compiling
CROSS_COMPILE = ppc-amigaos-
CC     = $(CROSS_COMPILE)gcc
STRIP  = $(CROSS_COMPILE)strip
CXX    = $(CROSS_COMPILE)c++ 
AS     = $(CROSS_COMPILE)as 
AR     = $(CROSS_COMPILE)ar
LD     = $(CROSS_COMPILE)ld 
RANLIB = $(CROSS_COMPILE)ranlib 
RM     = rm

# Change these as required
OPTIMIZE = -O2
DEBUG    = #-gstabs -DDEBUG
CFLAGS   = -I. -Iinclude -I../pixman/ -Wall $(AMIGA_CFLAGS) $(OPTIMIZE) $(DEBUG)

# Flags passed to gcc during linking
LINK = -G 0 -gstabs -L../pixman

# Name of the "thing" to build
TARGET = pixman.library

# Additional linker libraries
LIBS = -lpixman-impl

# Version of the library to build
VERSION = 53

# -------------------------------------------------------------
# Nothing should need changing below this line

SRCS = init.c stubs.c

OBJS = $(SRCS:.c=.o)


all: $(TARGET) libpixman.a

# Rules for building
$(TARGET): $(OBJS)
	$(CC) $(LINK) -nostartfiles -o $@.debug $(OBJS) $(LIBS) -Wl,-L.,--cref,-M,-Map=$@.debug.map
	$(STRIP) -R.comment $@.debug -o $@

libpixman.a: autoinit_pixman_base.o autoinit_pixman_main.o
	$(AR) rcs $@ autoinit_pixman_base.o autoinit_pixman_main.o

.PHONY: clean
clean:
	$(RM) $(TARGET) $(OBJS)

.PHONY: revision
revision:
	bumprev $(VERSION) $(TARGET)

